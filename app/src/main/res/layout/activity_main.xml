<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#131C4E"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:background="#131C4E"
            android:text="Welcome to AlphaUNI!"
            android:textAlignment="center"
            android:layout_marginLeft="15dp"
            android:textAllCaps="true"
            android:textColor="#CA0000"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="26dp"
            android:text="Please enter your login details below"
            android:textColor="#CA0000"
            android:textAlignment="center"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editTextTextEmailAddress"
            android:layout_width="350dp"
            android:layout_height="45dp"
            android:layout_marginBottom="22dp"
            android:background="@drawable/white_button"
            android:textColor="#CA0000"
            android:ems="10"
            android:textAlignment="center"
            android:hint="email"
            android:layout_marginLeft="30dp"
            android:inputType="textEmailAddress"
            android:textColorHint="#03A9F4" />

        <EditText
            android:id="@+id/editTextTextPassword"
            android:layout_width="350dp"
            android:layout_height="45dp"
            android:layout_marginBottom="34dp"
            android:background="@drawable/white_button"
            android:ems="10"
            android:hint="password"
            android:textAlignment="center"
            android:layout_marginLeft="30dp"
            android:textColor="#CA0000"
            android:inputType="textPassword"
            android:textColorHint="#03A9F4" />

        <Button
            android:id="@+id/button"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="46dp"
            android:background="@drawable/rounded_button"
            android:text="LOG IN"
            android:layout_marginLeft="151dp"
            android:textColor="#131C4E" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="26dp"
            android:text="If you do not have an AlphaUNI account then please sign up for one below"
            android:textColor="#CA0000"
            android:textAlignment="center"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:text="Sign Up"
            android:layout_marginLeft="151dp"
            android:textColor="#131C4E" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>